rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Accounts collection
    // Owner-only read/create/update; no client-side delete
    match /accounts/{accountId} {
      allow read: if request.auth != null && request.auth.uid == accountId;
      allow create: if request.auth != null && request.auth.uid == accountId;
      allow update: if request.auth != null && request.auth.uid == accountId;
      allow delete: if false;
    }

    // Events collection
    // Public get (single doc) for ranking UI status check
    // List (query) restricted to authenticated users
    // Only the event owner (account_id) can write
    match /events/{eventId} {
      allow get: if true;
      allow list: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.account_id == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.account_id == request.auth.uid;
    }

    // Users collection
    // Public read for ranking display
    // Write restricted to Cloud Functions (server-side only)
    match /users/{userId} {
      allow read: if true;
      allow create, update: if false;
      allow delete: if request.auth != null;
    }

    // Images collection
    // Public read for ranking display
    // Write restricted to Cloud Functions (server-side only)
    match /images/{imageId} {
      allow read: if true;
      allow create, update: if false;
      allow delete: if request.auth != null;
    }
  }
}
