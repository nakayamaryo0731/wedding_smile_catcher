# Wedding Smile Catcher - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================
# GCP Project Configuration
# ============================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-northeast1
GCP_ZONE=asia-northeast1-a

# ============================================================
# LINE Bot Configuration
# ============================================================
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token

# ============================================================
# Cloud Storage Configuration
# ============================================================
STORAGE_BUCKET=wedding-smile-images
STORAGE_ORIGINAL_PATH=original
STORAGE_THUMBNAIL_PATH=thumbnails

# ============================================================
# Firestore Configuration
# ============================================================
FIRESTORE_DATABASE=(default)
FIRESTORE_USERS_COLLECTION=users
FIRESTORE_IMAGES_COLLECTION=images
FIRESTORE_RANKING_COLLECTION=ranking

# ============================================================
# Cloud Vision API Configuration
# ============================================================
VISION_API_ENDPOINT=vision.googleapis.com
VISION_MAX_RESULTS=10

# ============================================================
# Vertex AI (Gemini) Configuration
# ============================================================
VERTEX_AI_LOCATION=asia-northeast1
VERTEX_AI_MODEL=gemini-1.5-flash
# Options: gemini-1.5-pro, gemini-1.5-flash
VERTEX_AI_TEMPERATURE=0.7
VERTEX_AI_MAX_TOKENS=500

# ============================================================
# Scoring Algorithm Parameters
# ============================================================
# Average Hash similarity threshold (0-64, lower = stricter)
SIMILARITY_THRESHOLD=8
# Penalty for similar images (e.g., 0.33 = 1/3 score)
SIMILARITY_PENALTY=0.33
# Minimum faces required for valid submission
MIN_FACE_COUNT=1

# ============================================================
# Frontend Configuration (Cloud Run)
# ============================================================
FRONTEND_PORT=8080
FRONTEND_REFRESH_INTERVAL=5000
# Refresh interval in milliseconds (5000 = 5 seconds)

# ============================================================
# Development/Debug Configuration
# ============================================================
NODE_ENV=production
# Options: development, production
LOG_LEVEL=info
# Options: debug, info, warn, error
DEBUG=false

# ============================================================
# Optional: Custom Domain
# ============================================================
# CUSTOM_DOMAIN=smile.your-domain.com
