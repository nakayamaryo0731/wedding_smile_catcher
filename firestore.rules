rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Images collection
    match /images/{imageId} {
      allow read: if true;
      allow write: if true;
    }

    // Events collection (for multi-event support)
    match /events/{eventId} {
      allow read: if true;
      allow write: if true;

      // Event-specific users subcollection
      match /users/{userId} {
        allow read: if true;
        allow write: if true;
      }

      // Event-specific images subcollection
      match /images/{imageId} {
        allow read: if true;
        allow write: if true;
      }
    }
  }
}
