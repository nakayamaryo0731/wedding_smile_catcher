rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Events collection
    // Authenticated users can read events
    // Only the event owner (account_id) can write
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.account_id == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.account_id == request.auth.uid;
    }

    // Users collection
    // Public read for ranking display
    // Write restricted to Cloud Functions (server-side only)
    match /users/{userId} {
      allow read: if true;
      allow create, update: if false;
      allow delete: if request.auth != null;
    }

    // Images collection
    // Public read for ranking display
    // Write restricted to Cloud Functions (server-side only)
    match /images/{imageId} {
      allow read: if true;
      allow create, update: if false;
      allow delete: if request.auth != null;
    }
  }
}
